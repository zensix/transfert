extends layout

block content
  if message != ''
    .alert.alert-error #{message}
  .container
    h1 Reset Password de  #{user.username}
    if message != ''
      .alert.alert-error #{message}
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/user/changepassword",method="post", style='max-width: 300px;')
      input.form-control(type='oldpassword', name="oldpassword", placeholder='Old Password')
      input.form-control(type='newpassword', name="newpassword", placeholder='New Password')
      button.btn.btn-default(type='submit') Submit

block localscript
   script(src='/javascripts/app.js')